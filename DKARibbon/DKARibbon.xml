<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
  <ribbon>
    <tabs>
      <tab idMso="TabAddIns">
        <group id="Content" label="War Room">
          <button id="WarRoom" label="War Room Format"
               screentip="War Room Format" onAction="OnWarRoomButton"
               supertip="Formats AX Report into DataTable."/>
          <button id="WarRoomPresent" label="War Room Present"
               screentip="War Room Present Data" onAction="OnWarRoomPresentButton"
               supertip="Presentation and Action Capture Format"/>          
        </group>
        <group id ="MasterAnalytics" label="Master Analytics">
          <button id="MasterPOData" label="Master PO Table"
                  screentip="Format raw AX from OPEN PURCHASE ORDER LINES report, and add to bottom or Expedite Report"
                  onAction="OnMasterPODataButton"/>
          <button id="MasterPODataTest" label="Master PO Table - Test"
                  screentip="Test the MasterPO program, using sample data / test expedite report."
                  onAction="OnMasterPODataButtonTest"/>
          
        </group>
        <group id ="UpdateExpRep" label = "Update">
          <button id="ItemUpdate" label="ItemUpdate"
                  screentip="Highlight Item Numbers, Item Descriptions, and Item Categories to update Expedite report."
                  onAction="btnItemUpdate"/>
          <button id="VendorUpdate" label="Vendor Update"
                  screentip="Highlight Vendor Numbers and Names to update Expedite report."
                  onAction="btnVendorUpdate"/>
        </group>
          
        <group id="RecDate" label ="ReceivedDate">
          <button id="UpdateRecDate" label="Update Received Date" 
                  screentip ="Updates any items in Expedite Report that have been received.  Inputs yesterday's date into Received Date column."
                  onAction="OnUpdateRecDateButton"/>
        </group>
        <group id="Test" label="TestButton">
          <button id="TestButton" label="Test"
                  onAction="TestButton"/>
        </group>
        <group id="Tools" label="Tools">
          <button id="btnIfError" label ="IfError"
                  onAction ="btnIfError"/>
          <button id="btnOverWrite" label="OverWrite"
                  onAction = "btnOverWrite"/>
        </group>
        <group id="ExpRep_V2" label="Exp Rep V2">
          <button id="btnEXPREP_V2" label ="ExpRep"
                  onAction ="btnExpRep_V2"/>          
        </group>
      </tab>
    </tabs>
  </ribbon>
</customUI>

